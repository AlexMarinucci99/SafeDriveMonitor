<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.safedrivemonitor.controller.DeviceDetectionController"
      spacing="20"
      alignment="CENTER"
      stylesheets="@../css/styles.css"
      styleClass="login-root"
      style="-fx-background-image: url('/images/load.jpg'); -fx-background-size: cover;">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label fx:id="deviceStatusLabel" text="" styleClass="title-label"/>
    <ProgressIndicator fx:id="deviceSpinner" visible="false"/>
</VBox>
